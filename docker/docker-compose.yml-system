version: "3.8"

services:
  vulnerable:
    container_name: vulnerable
    image: heywoodlh/sc-vulnerable:2021_10_snapshot
    restart: always
    networks:
      vulnerable_net:
        ipv4_address: 172.30.30.10
    volumes:
      - ./sudoers/sudoers:/etc/sudoers 
      - ./sudoers/security:/etc/sudoers.d/security
    platform: "linux/amd64"

  juiceshop:
    container_name: juiceshop
    restart: always
    image: bkimminich/juice-shop:v14.3.0
    environment:
      NODE_ENV: ctf
    networks:
      vulnerable_net:
        ipv4_address: 172.30.30.20

  attacker:
    container_name: attacker
    restart: always
    image: heywoodlh/sc-attacker:726d64811fe551ae2fa0ceda9914fe2c6ec13704
    #build: ./attacker 
    ports:
      - "3389:3389"
      - "22:22"
    networks:
      vulnerable_net:
        ipv4_address: 172.30.30.50
    volumes:
      - ./net-info.txt:/tmp/net-info.txt 
      - ./staff-passwords.txt:/tmp/staff-passwords.txt
    environment:
      USER: attacker
      PASSWORD: attacker

networks:
  vulnerable_net:
    ipam:
      config:
        - 
          subnet: 172.30.30.0/24
          gateway: 172.30.30.1
